    <convert:AbsoutelySingleConvert x:Key="single"/>
    <Style TargetType="RadioButton" x:Key="rb">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border Name="border" CornerRadius="5">
                        <TextBlock Name="alignText" Text="{TemplateBinding Content}"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#595959" />
                            <Setter TargetName="alignText" Property="Foreground" Value="white" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="ListBox" x:Key="withChangeBtnListbox" BasedOn="{StaticResource MaterialDesignListBox}">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <UniformGrid   Columns="5" HorizontalAlignment="Right"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid AllowDrop="True"
                          PreviewMouseLeftButtonDown="KeyValue_PreviewMouseLeftButtonDown"
                          PreviewMouseLeftButtonUp="KeyValue_PreviewMouseLeftButtonUp"
                          PreviewMouseMove="KeyValue_PreviewMouseMove"
                          Drop="KeyValue_Drop">
                        <Image Name="image" Source="{Binding .,Converter={StaticResource single} }" Width="30" Height="60"/>
                        <Button Name="btn" Content="Change" Background="#3f3f3f" BorderThickness="0" Padding="0" Height="20" FontSize="10" Visibility="Collapsed"
       Command="{Binding DataContext.ChangeImageCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
       CommandParameter="{Binding .}"/>
                    </Grid>
                    <DataTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="btn"  Property="Visibility" Value="Visible" />
                        </Trigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <userlib:IsShowConverter x:Key="isShow"/>
    <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="monthday">
        <ObjectDataProvider.MethodParameters>
            <x:Type TypeName="userlib:MonthDayModeEnum" />
        </ObjectDataProvider.MethodParameters>
    </ObjectDataProvider>
    <Style x:Key="CustomRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid Background="Transparent">
                        <Path x:Name="path1" Stretch="Fill" Fill="#FF333333" />
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="path1" Property="Fill" Value="#9d9d9d" />
                        </Trigger>
                        <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource Self}}" Value="1">
                            <Setter TargetName="path1" Property="Data" Value="M96 128h832v96H96zM96 576h832v96H96zM96 352h576v96H96zM96 800h576v96H96z" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource Self}}" Value="2">
                            <Setter TargetName="path1" Property="Data" Value="M96 128h832v96H96zM96 576h832v96H96zM224 352h576v96H224zM224 800h576v96H224z" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource Self}}" Value="3">
                            <Setter TargetName="path1" Property="Data" Value="M96 128h832v96H96zM96 576h832v96H96zM352 352h576v96H352zM352 800h576v96H352z" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <!--<Setter Property="Background" Value="Red" />-->
        <Setter Property="Foreground" Value="#FF333333" />
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
