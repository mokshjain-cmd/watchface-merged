    <DataTemplate x:Key="BindDragWidgetTemplate">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
           DataContext="{Binding Path=DataContext, 
           RelativeSource={RelativeSource AncestorType={x:Type ContentControl}}}">
            <StackPanel>
                <Grid Margin="0 10">
                    <TextBlock Text="Auto Layout" HorizontalAlignment="Left"/>
                    <CheckBox  HorizontalAlignment="Right" Width="30" Height="30" 
                               IsChecked="{Binding SelectBind.IsAutoLayout}"
                               Background="White" Name="auto"/>
                </Grid>
                <Grid Margin="0 10">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=auto, Path=IsChecked}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=auto, Path=IsChecked}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.Resources>
                                <Style TargetType="RadioButton" BasedOn="{StaticResource rb}">

                                </Style>
                            </Grid.Resources>
                            <RadioButton Content="Left-Right" Background="#313131" BorderThickness="0" Margin="5 10" Height="60"
                                         IsChecked="{Binding SelectBind.Orientation, Converter={x:Static convert:EqualityConverter.Instance}
                                ,ConverterParameter={x:Static userlib:Orientation.Horizontal}}" 
                                          />
                            <RadioButton Content="Up-Down" Background="#313131" Grid.Column="1" BorderThickness="0" Margin="5 10" Height="60"
                                                  IsChecked="{Binding SelectBind.Orientation, Converter={x:Static convert:EqualityConverter.Instance}
                                                  ,ConverterParameter={x:Static userlib:Orientation.Vertical}}" 
                                         />
                        </Grid>
                        <Border Padding="10 10" CornerRadius="10" Background="#313131" Margin="5 0 5 10">
                            <Grid>
                                <TextBlock Text="Spacing" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SelectBind.Spacing }" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                    <Border  Grid.Column="1" Padding="10 10" CornerRadius="10" Background="#313131" Margin="0">

                        <UniformGrid  Columns="3">
                            <UniformGrid.Resources>
                                <Style TargetType="RadioButton" BasedOn="{StaticResource rb}">
                                </Style>
                            </UniformGrid.Resources>
                            <RadioButton  Content="Top-Left" IsChecked="{Binding SelectBind.Direction,
                                Converter={x:Static convert:EqualityConverter.Instance},ConverterParameter={x:Static userlib:Direction.TopLeft}}"  />
                            <RadioButton  Content="Top"    IsChecked="{Binding SelectBind.Direction,
                                Converter={x:Static convert:EqualityConverter.Instance},ConverterParameter={x:Static userlib:Direction.Top}}"/>
                            <RadioButton  Content="Top-Right"  IsChecked="{Binding SelectBind.Direction,
                                Converter={x:Static convert:EqualityConverter.Instance},ConverterParameter={x:Static userlib:Direction.TopRight}}"/>
                            <RadioButton  Content="Left"    IsChecked="{Binding SelectBind.Direction,
                                Converter={x:Static convert:EqualityConverter.Instance},ConverterParameter={x:Static userlib:Direction.Left}}"/>
                            <RadioButton  Content="Center"   IsChecked="{Binding SelectBind.Direction,
                                Converter={x:Static convert:EqualityConverter.Instance},ConverterParameter={x:Static userlib:Direction.Center}}"/>
                            <RadioButton  Content="Right"   IsChecked="{Binding SelectBind.Direction,
                                Converter={x:Static convert:EqualityConverter.Instance},ConverterParameter={x:Static userlib:Direction.Right}}"/>
                            <RadioButton  Content="Bottom-Left"  IsChecked="{Binding SelectBind.Direction,
                                Converter={x:Static convert:EqualityConverter.Instance},ConverterParameter={x:Static userlib:Direction.BottomLeft}}"/>
                            <RadioButton  Content="下"    IsChecked="{Binding SelectBind.Direction,
                                Converter={x:Static convert:EqualityConverter.Instance},ConverterParameter={x:Static userlib:Direction.Bottom}}"/>
                            <RadioButton  Content="右下"  IsChecked="{Binding SelectBind.Direction,
                                Converter={x:Static convert:EqualityConverter.Instance},ConverterParameter={x:Static userlib:Direction.BottomRight}}"/>
                        </UniformGrid>
                    </Border>
                </Grid>
                <TextBlock Text="应用与数据项" Margin="0 10"/>
                <Border Padding="10 10" CornerRadius="10" Background="#313131" Margin="0 10">
                    <Grid>
                        <TextBlock Text="跳转应用"/>
                        <ComboBox HorizontalAlignment="Right" Width="170" SelectedIndex="0"
                                   DisplayMemberPath="Value"  SelectedValuePath="Key" ItemsSource="{Binding AppData}" SelectedItem="{Binding SelectBind.AppData}"/>
                    </Grid>
                </Border>
                <Border Padding="10 10" CornerRadius="10" Background="#313131" Margin="0 10">
                    <Grid>
