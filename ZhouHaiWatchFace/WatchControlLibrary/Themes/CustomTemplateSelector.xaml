                        <ComboBox HorizontalAlignment="Right" Width="170" SelectedIndex="0"
                                  ItemsSource="{Binding AssociatedData}" SelectedItem="{Binding SelectBind.AssociatedData}"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
