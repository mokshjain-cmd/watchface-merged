    <DataTemplate x:Key="BindDragProgressTemplate">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
           DataContext="{Binding Path=DataContext, RelativeSource={RelativeSource AncestorType={x:Type ContentControl}},Mode=TwoWay}"
          >
            <StackPanel>
                <TextBlock Text="Bind Data"/>
                <Border Padding="10 10" CornerRadius="10" Background="#313131">
                    <StackPanel>
                        <TextBlock Text="{Binding SelectBind.DragName}"/>
                        <Grid>
                            <TextBlock Text="Max Value" HorizontalAlignment="Left"/>
                            <TextBox Text="{Binding SelectBind.MaxNum,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right" BorderBrush="White" Width="80" HorizontalContentAlignment="Right"/>
                        </Grid>
                        <Grid>
                            <TextBlock Text="Target Value" HorizontalAlignment="Left"/>
                            <TextBox Text="{Binding SelectBind.TargetValue,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right" BorderBrush="White" Width="80" HorizontalContentAlignment="Right"/>
                        </Grid>
                        <Grid>
                            <TextBlock Text="Current Value" HorizontalAlignment="Left"/>
                            <TextBox Text="{Binding SelectBind.CurrentNum,Mode=TwoWay}" IsReadOnly="True" HorizontalAlignment="Right" BorderThickness="0" Width="80" HorizontalContentAlignment="Right"/>
                        </Grid>
                        <Grid>
                            <TextBlock Text="Fill Type" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <ComboBox Name="fill" HorizontalContentAlignment="Right" HorizontalAlignment="Right" SelectedIndex="{Binding SelectBind.FillType}" Width="120">
                                <ComboBoxItem Content="Numeric Fill"/>
                                <ComboBoxItem Content="Normal Fill"/>
                            </ComboBox>
                        </Grid>
                        <!--<Grid>-->
                        <Grid Margin="0 10 0 0">
                            <TextBlock Text="Image: "/>
                            <Button Content="Add Image" HorizontalAlignment="Right" BorderThickness="0" Background="Gray"
              Command="{Binding AddImageSourceCommand}" CommandParameter="{Binding SelectBind.ImageSource}"/>
                        </Grid>
                        <ListBox ItemsSource="{Binding SelectBind.ImageSource}" Style="{StaticResource withChangeBtnListbox}">
                            <!--<ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid   Columns="5" HorizontalAlignment="Right"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding .,Converter={StaticResource single}}"  Width="30"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>-->
                        </ListBox>
                        <!--</Grid>-->
                        <Grid>
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=fill, Path=SelectedIndex}" Value="0">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=fill,Path=SelectedIndex}" Value="1">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <TextBlock Text="Unit Image: " Margin="0 10"/>
                            <Button Margin="0 0 0 10" Width="50" Height="50" BorderThickness="0" Command="{Binding AddImageCommand}" CommandParameter="Unit" Padding="0" Background="Transparent">
                                <Button.Content>
                                    <Image Source="{Binding SelectBind.UnitSource,Converter={StaticResource single }}" Stretch="Fill"/>
                                </Button.Content>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </DataTemplate>
