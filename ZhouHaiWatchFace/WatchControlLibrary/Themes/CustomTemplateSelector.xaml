    <DataTemplate x:Key="BindDragKeyValueTemplate">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
       DataContext="{Binding Path=DataContext, RelativeSource={RelativeSource AncestorType={x:Type ContentControl}},Mode=TwoWay}">
            <StackPanel>
                <TextBlock Text="Bind Data"/>
                <Border Padding="10 10" CornerRadius="10" Background="#313131">
                    <StackPanel>
                        <TextBlock Text="{Binding SelectBind.DragName}"/>
                        <Grid>
                            <TextBlock Text="Max Value" HorizontalAlignment="Left"/>
                            <TextBox Text="{Binding SelectBind.MaxNum,Mode=TwoWay}" IsReadOnly="True" HorizontalAlignment="Right" BorderThickness="0" Width="80" HorizontalContentAlignment="Right"/>
                        </Grid>
                        <Grid>
                            <TextBlock Text="Current Value" HorizontalAlignment="Left"/>
                            <TextBox Text="{Binding SelectBind.CurrentNum,Mode=TwoWay}" IsReadOnly="True" HorizontalAlignment="Right" BorderThickness="0" Width="80" HorizontalContentAlignment="Right"/>
                        </Grid>
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="Image: "/>
                                <ListBox Height="500" ScrollViewer.VerticalScrollBarVisibility="Hidden" ItemsSource="{Binding SelectBind.ValueDataImages}" HorizontalContentAlignment="Right" Tag="{Binding SelectBind}">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid  Columns="5" HorizontalAlignment="Right"/>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel AllowDrop="True"
                                                        PreviewMouseLeftButtonDown="KeyValue_PreviewMouseLeftButtonDown"
                                                        PreviewMouseLeftButtonUp="KeyValue_PreviewMouseLeftButtonUp"
                                                        PreviewMouseMove="KeyValue_PreviewMouseMove"
                                                        Drop="KeyValue_Drop">
                                                <Grid>
                                                    <Image Source="{Binding Value, Converter={StaticResource single}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                                                           Width="36" />
                                                    <Button Name="btn" Content="Change" Background="#3f3f3f" BorderThickness="0" Padding="0" Height="20" FontSize="10" Visibility="Collapsed"
                                                            Command="{Binding DataContext.ChangeImageCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                            CommandParameter="{Binding Key}"/>
                                                </Grid>
                                                <TextBlock Text="{Binding Key}" ToolTip="{Binding Key}"/>
                                            </StackPanel>
                                            <DataTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="btn"  Property="Visibility" Value="Visible" />
                                                </Trigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>

                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="BindDragSlotTemplate">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
      DataContext="{Binding Path=DataContext, RelativeSource={RelativeSource AncestorType={x:Type ContentControl}},Mode=TwoWay}">
            <ScrollViewer Height="{Binding RelativeSource={RelativeSource AncestorType=ContentControl}, Path=ActualHeight}" VerticalScrollBarVisibility="Hidden">
                <StackPanel>
                    <TextBlock Text="Bind Data"/>
                    <Border Padding="10 10" CornerRadius="10" Background="#313131">
                        <StackPanel>
                            <TextBlock Text="特性"/>
                            <Grid Margin="0 10 0 0">
                                <TextBlock Text="容器类型" VerticalAlignment="Center"/>
                                <ComboBox ItemsSource="{Binding SelectBind.SlotTypeData}" DisplayMemberPath="Key" SelectedValuePath="Value" SelectedValue="{Binding SelectBind.SlotType}"
                                       SelectedIndex="0"   HorizontalAlignment="Right" Width="110"/>
                            </Grid>
                            <Grid Margin="0 10 0 0">
                                <TextBlock Text="当前显示" VerticalAlignment="Center"/>
                                <ComboBox ItemsSource="{Binding SelectBind.SubItems}" DisplayMemberPath="DragName"
                                       SelectedIndex="{Binding SelectBind.ShowItemIndex}"  HorizontalAlignment="Right" Width="110"/>
                            </Grid>
                            <StackPanel>
                                <!--暂时不用-->
                                <!--<Grid Margin="0 10 0 0">
                                    <TextBlock Text="可选无" VerticalAlignment="Center"/>
                                    <ToggleButton IsChecked="{Binding SelectBind.HasNull}" HorizontalAlignment="Right"/>
                                </Grid>-->
                                <Grid Margin="0 10 0 0">
                                    <TextBlock Text="自定义位置" VerticalAlignment="Center"/>
                                    <ToggleButton IsChecked="{Binding SelectBind.IsCustomPos}" HorizontalAlignment="Right"/>
                                </Grid>
                                <ListBox ItemsSource="{Binding SelectBind.Positions}" SelectedIndex="{Binding SelectBind.ShowPosIndex}" PreviewMouseWheel="ListBox_PreviewMouseWheel">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <CheckBox IsChecked="{Binding CurSlotPosition}" IsEnabled="False"/>
                                                    <Button Content="添加" Command="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=DataContext.AddPostionCommand}"  
                                                        Margin="10 0 5 0" Width="40" Padding="0"/>
                                                    <Button Content="Delete" Command="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=DataContext.DeletePostionCommand}"
                                                        CommandParameter="{Binding .}" Width="40" Padding="0"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="X" VerticalAlignment="Center" Margin="5 0"/>
                                                    <TextBox Text="{Binding X, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                                    <TextBlock Text="Y" VerticalAlignment="Center" Margin="10 0 5 0"/>
                                                    <TextBox Text="{Binding Y, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <!--<TextBlock Text="容器列表"/>
                            <ListBox ItemsSource="{Binding SelectBind.SubItems}">
                                
                            </ListBox>-->
                                <TextBlock Text="小部件边框图"/>
                                <ListBox ItemsSource="{Binding SelectBind.SubItems}" PreviewMouseWheel="ListBox_PreviewMouseWheel">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="Gray" CornerRadius="5">
                                                <Grid>
                                                    <TextBlock  Text="{Binding DragName}" VerticalAlignment="Center"/>
                                                    <Button Width="40" Height="40" BorderThickness="0" Command="{Binding DataContext.AddEditBoxCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding .}" Padding="0" HorizontalAlignment="Right">
                                                        <Button.Content>
                                                            <Image Source="{Binding EditBox, Converter={StaticResource single}}" Stretch="Fill"/>
                                                        </Button.Content>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <TextBlock Text="小部件预览图"/>
                                <ListBox ItemsSource="{Binding SelectBind.SubItems}" PreviewMouseWheel="ListBox_PreviewMouseWheel">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="Gray" CornerRadius="5">
                                                <Grid>
                                                    <TextBlock  Text="{Binding DragName}" VerticalAlignment="Center"/>
                                                    <Button Width="40" Height="40" BorderThickness="0" Command="{Binding DataContext.AddPreviewCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding .}" Padding="0" HorizontalAlignment="Right">
                                                        <Button.Content>
                                                            <Image Source="{Binding Preview, Converter={StaticResource single}}" Stretch="Fill"/>
                                                        </Button.Content>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>

                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </DataTemplate>
