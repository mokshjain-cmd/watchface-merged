<UserControl x:Class="WatchUI.Views.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WatchUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" Margin="50">
            <Image Source="{Binding ProValues.ProImgPath,TargetNullValue={x:Null}}" Width="240" Height="280"/>
            <ProgressBar Width="300"  Height="40" Value="{Binding ProValues.ProValue}"  Margin="0 20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" TextBlock.FontSize="20">
                <TextBlock Text="{Binding ProValues.NowNum}" />
                <TextBlock Text=" / "/>
                <TextBlock Text="{Binding ProValues.AllNum}"/>
                <TextBlock Text="bin文件大小：" Margin="30 0 0 0"/>
                <TextBlock Text="{Binding ProValues.ProBinNum}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
