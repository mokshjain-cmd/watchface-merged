<UserControl x:Class="WatchUI.Views.GeneralDate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WatchUI.Views"
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Header="通用日期"  >
        <StackPanel>
            <material:ColorZone Mode="PrimaryLight" Padding="8" Margin="0 0 0 0">
                <DockPanel>
                    <Button Content="-" DockPanel.Dock="Right" Command="{Binding SubWeekbarShowIndex}" IsEnabled="{Binding Weekbar.IsEnable}"/>
                    <Button Content="+" DockPanel.Dock="Right" Command="{Binding AddWeekbarShowIndex}" IsEnabled="{Binding Weekbar.IsEnable}"/>
                    <Slider Minimum="1" Maximum="{Binding Weekbar.LayerNum}" Value="{Binding Weekbar.ShowIndex}" VerticalAlignment="Center" Width="120" DockPanel.Dock="Right" Margin="5 0 0 0"  IsEnabled="{Binding Weekbar.IsEnable}"/>
                    <TextBlock VerticalAlignment="Center" Margin="0 0 0 0"  Text="{Binding Weekbar.BarDescr}"  DockPanel.Dock="Right"/>
                    <TextBlock VerticalAlignment="Center" Margin="0 0 0 0"  Text="星期" />
                    <TextBlock VerticalAlignment="Center" FontSize="14" HorizontalAlignment="Center" IsEnabled="{Binding Weekbar.IsEnable}" Style="{StaticResource textBlock}"/>
                </DockPanel>
            </material:ColorZone>
            <material:ColorZone Mode="PrimaryLight" Padding="8" Margin="0 5 0 0">
                <DockPanel>
                    <Button Content="-" DockPanel.Dock="Right" Command="{Binding SubDatebarShowIndex}" IsEnabled="{Binding IsEnable}"/>
                    <Button Content="+" DockPanel.Dock="Right" Command="{Binding AddDatebarShowIndex}" IsEnabled="{Binding IsEnable}"/>
                    <Slider Minimum="1" Maximum="{Binding  LayerNum}" Value="{Binding ShowIndex}" Width="120" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="5 0 0 0" IsEnabled="{Binding IsEnable}"/>
                    <TextBlock VerticalAlignment="Center" Margin="0 0 0 0"  Text="{Binding BarDescr}"  DockPanel.Dock="Right"/>
                    <TextBlock VerticalAlignment="Center" Margin="0 0 0 0"  Text="日期" />
                    <TextBlock VerticalAlignment="Center" FontSize="14" HorizontalAlignment="Center" IsEnabled="{Binding IsEnable}" Style="{StaticResource textBlock}"/>
                </DockPanel>
            </material:ColorZone>
            <material:ColorZone Mode="PrimaryLight" Padding="8" Margin="0 5 0 0">
                <DockPanel IsEnabled="{Binding TimeSpanbar.IsEnable}">
                    <ToggleButton Style="{StaticResource MaterialDesignSwitchAccentToggleButton}" VerticalAlignment="Center" DockPanel.Dock="Right" Margin="5 0 0 0" IsChecked="{Binding IsPM}"/>
                    <TextBlock VerticalAlignment="Center" Margin="0 0 0 0"  Text="上下午" />
                    <TextBlock VerticalAlignment="Center" FontSize="14" HorizontalAlignment="Center" IsEnabled="{Binding TimeSpanbar.IsEnable}" Style="{StaticResource textBlock}"/>
                </DockPanel>
            </material:ColorZone>
            <material:ColorZone Mode="PrimaryLight" Padding="8" Margin="0 5 0 0">
                <DockPanel>
                    <ToggleButton Style="{StaticResource MaterialDesignSwitchAccentToggleButton}" DockPanel.Dock="Right" VerticalAlignment="Center" IsChecked="{Binding TimeWay}"/>
                    <!--<TextBlock VerticalAlignment="Center" Margin="0 0 0 0"  Text="{Binding Numbar.BarDescr}"  DockPanel.Dock="Right"/>-->
                    <TextBlock VerticalAlignment="Center" Margin="0 0 0 0"  Text="小时制" />
                    <!--<TextBlock VerticalAlignment="Center" FontSize="14" HorizontalAlignment="Center" IsEnabled="{Binding Numbar.IsEnable}" Style="{StaticResource textBlock}"/>-->
                </DockPanel>
            </material:ColorZone>
            <!--<material:ColorZone Mode="PrimaryLight" Padding="8" Margin="0 5 0 0">
                <DockPanel IsEnabled="{Binding Datebar.IsEnable}">
                    <Button Content="2" DockPanel.Dock="Right" Margin="5 0 0 0" Command="{Binding ShowNumCommnad}" CommandParameter="2"/>
                    <Button Content="1" DockPanel.Dock="Right" Margin="5 0 0 0" Command="{Binding ShowNumCommnad}" CommandParameter="1" Cursor="Hand"/>
                    <TextBlock VerticalAlignment="Center" Margin="0 0 0 0"  Text="模拟" />
                </DockPanel>
            </material:ColorZone>-->
            <!--<material:ColorZone Mode="PrimaryLight" Padding="8" Margin="0 5 0 0">
                <DockPanel IsEnabled="{Binding Datebar.IsEnable}">
                    <Slider Minimum="0" Maximum="2" Value="{Binding Numbar.Align}" Width="120" DockPanel.Dock="Right" Margin="5 0 0 0"/>
                    <TextBlock VerticalAlignment="Center" Margin="0 0 0 0"  Text="{Binding Datebar.AlignTxt}"  DockPanel.Dock="Right"/>
                    <TextBlock VerticalAlignment="Center" Margin="0 0 0 0"  Text="对齐方式" />
                </DockPanel>
            </material:ColorZone>-->
        </StackPanel>
    </GroupBox>
</UserControl>
