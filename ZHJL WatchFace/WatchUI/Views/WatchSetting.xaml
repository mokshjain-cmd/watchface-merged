<UserControl x:Class="WatchUI.Views.WatchSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WatchUI.Views"
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
            
             Width="240" Height="300">
    <Grid Background="White">
        <GroupBox  Header="表盘设置">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <UniformGrid Columns="2">
                    <UniformGrid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Bottom"/>
                        </Style>
                    </UniformGrid.Resources>
                    <TextBlock Text="项目名称"></TextBlock>
                    <TextBox  Text="{Binding Setting.ProjectName}"/>
                    <TextBlock Text="表盘Width"></TextBlock>
                    <TextBox  Text="{Binding Setting.Width}"/>
                    <TextBlock Text="表盘Height"/>
                    <TextBox  Text="{Binding Setting.Height}"/>
                    <TextBlock Text="缩略图Width"></TextBlock>
                    <TextBox  Text="{Binding Setting.ThumbnailWidth}"/>
                    <TextBlock Text="缩略图Height"/>
                    <TextBox  Text="{Binding Setting.ThumbnailHeight}"/>
                    <TextBlock Text="缩略图X"></TextBlock>
                    <TextBox  Text="{Binding Setting.ThumbnailX}"/>
                    <TextBlock Text="缩略图Y"/>
                    <TextBox  Text="{Binding Setting.ThumbnailY}"/>
                </UniformGrid>
                <StackPanel Grid.Row="1" Margin="0 10" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">

                    <Button Content="确定" Command="{Binding Confim}" Margin="0 0 10 0"/>
                    <Button Content="取消" Command="{Binding Cancel}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
