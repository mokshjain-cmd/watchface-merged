<UserControl x:Class="WatchUI.Views.AddSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WatchUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <Grid Background="White">
        <GroupBox Header="增加">
            <StackPanel>
                <UniformGrid Columns="2">
                    <UniformGrid.Resources>
                        <Style TargetType="Label">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                        <Style TargetType="TextBox">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>
                    </UniformGrid.Resources>
                    <Label Content="项目名称" />
                    <TextBox Text="{Binding Setting.ProjectName}" Height="30" Width="120"/>
                    <Label Content="宽"/>
                    <TextBox Text="{Binding Setting.Width}" Height="30" Width="120"/>
                    <Label Content="高" />
                    <TextBox Text="{Binding Setting.Height}" Height="30" Width="120"/>
                    <Label Content="缩略图宽"/>
                    <TextBox Text="{Binding Setting.ThumbnailWidth}" Height="30" Width="120"/>
                    <Label Content="缩略图高" />
                    <TextBox Text="{Binding Setting.ThumbnailHeight}" Height="30" Width="120"/>
                    <Label Content="缩略图X"/>
                    <TextBox Text="{Binding Setting.ThumbnailX}" Height="30" Width="120"/>
                    <Label Content="缩略图Y"/>
                    <TextBox Text="{Binding Setting.ThumbnailY}" Height="30" Width="120"/>
                    <Label Content="最大值"/>
                    <TextBox Text="{Binding Setting.MaxValue}" Height="30" Width="120"/>
                </UniformGrid>
                <StackPanel Margin="0,10,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="确定" Margin="10" Width="100" HorizontalAlignment="Right" Command="{Binding ConfirmCommand}" Cursor="Hand"/>
                    <Button Content="取消" Width="100" HorizontalAlignment="Right" Command="{Binding CloseCommand}" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
           
            
           
        </GroupBox>
    </Grid>
</UserControl>
